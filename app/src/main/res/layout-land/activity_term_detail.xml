<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermDetailActivity">

    <ListView
        android:id="@+id/termCourseList"
        android:layout_width="686dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/deleteTermBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/endText"
        android:layout_width="59dp"
        android:layout_height="30dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="12dp"
        android:text="End: "
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addCourseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="addCourse"
        android:text="Add Course"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/deleteTermBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:onClick="deleteTerm"
        android:text="Delete Term"
        app:layout_constraintBaseline_toBaselineOf="@+id/addCourseBtn"
        app:layout_constraintEnd_toStartOf="@+id/addCourseBtn" />

    <TextView
        android:id="@+id/startText"
        android:layout_width="66dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Start: "
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="176dp"
        android:layout_height="29dp"
        android:layout_marginStart="88dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/startText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="199dp"
        android:layout_height="29dp"
        android:layout_marginStart="352dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/endText"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>